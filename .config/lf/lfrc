# interpreter for shell commands (needs to be POSIX compatible)
set shell sh
set shellopts '-eu'
set ifs "\n"
set scrolloff 10
set drawbox on
set info size
set promptfmt " \[\033[38;5;166m\]%u\[\033[38;5;244m\]@\[\033[38;5;217m\]%h\[\033[38;5;15m\] \[\033[38;5;155;1m\]%w" 

